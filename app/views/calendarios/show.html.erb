<table class="table table-bordered table-hover">
  <tr>
    <th>N&uacute;mero</th>
    <th>Horario</th>
    <th>Nivel</th>
    <th>Instructor</th>
    <!--<th>Total</th>-->
  </tr>
  <% @grupos.each_with_index do |grupo, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= grupo.horario %></td>
      <td><%= grupo.nivel %></td>
      <td><%= grupo.user.nombre_completo %></td>
