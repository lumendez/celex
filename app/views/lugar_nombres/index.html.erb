<h1 class="sub">Lugar de realizaci&oacute;n</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @lugar_nombres.each do |lugar_nombre| %>
      <tr>
        <td><%= lugar_nombre.nombre %></td>
        <td><%= link_to 'Detalles', lugar_nombre %></td>
        <td><%= link_to 'Editar', edit_lugar_nombre_path(lugar_nombre) %></td>
        <td><%= link_to 'Eliminar', lugar_nombre, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar nuevo nombre de lugar de realización', new_lugar_nombre_path %>
