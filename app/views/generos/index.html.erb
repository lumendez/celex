<h1 class="sub">G&eacute;neros</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Genero</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @generos.each do |genero| %>
      <tr>
        <td><%= genero.genero %></td>
        <td><%= link_to 'Detalles', genero %></td>
        <td><%= link_to 'Editar', edit_genero_path(genero) %></td>
        <td><%= link_to 'Eliminar', genero, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar género', new_genero_path %>
