<%= form_for(registro_curso) do |f| %>
  <% if registro_curso.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(registro_curso.errors.count, "error") %> prohibited this registro_curso from being saved:</h2>

      <ul>
      <% registro_curso.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="form-group col-sm-4">
    <%= f.label :nombre, "Nombre del curso" %>
    <%= f.text_field :nombre, class:'form-control', required: true %>
  </div>

  <div class="form-group col-sm-4">
    <%= f.label :registro, "Número de registro" %>
    <%= f.text_field :registro, class:'form-control', required: true %>
  </div>

  <div class="form-group col-sm-4">
    <%= f.label :tipo_oferta, "Tipo de oferta" %>
    <%= f.text_field :tipo_oferta, class:'form-control', required: true %>
  </div>
</div>

<div class="row">
  <div class="form-group col-sm-4">
    <%= f.label :horas, "Duración en horas (total)" %>
    <%= f.text_field :horas, class:'form-control', required: true %>
  </div>

  <div class="form-group col-sm-4">
    <%= f.label :modalidad, "Modalidad" %>
    <%= f.text_field :modalidad, class:'form-control', required: true %>
  </div>

  <div class="form-group col-sm-4">
    <%= f.label :cupo, "Cupo" %>
    <%= f.text_field :cupo, class:'form-control', required: true %>
  </div>
</div>

<div class="row">
  <div class="form-group col-sm-4">
    <%= f.label :cuota %>
    <%= f.text_field :cuota, class:'form-control' %>
  </div>

  <div class="form-group col-sm-4">
    <%= f.label :clave_catalogo, 'Clave del catálogo del fideicomiso' %>
    <%= f.text_field :clave_catalogo, class:'form-control' %>
  </div>

  <div class="form-group col-sm-4">
    <%= f.label :proyecto %>
    <%= f.text_field :proyecto, class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="actions col-sm-4">
    <%= f.submit "Enviar", class: "btn btn-md btn-primary" %>
  </div>
</div>
<% end %>
