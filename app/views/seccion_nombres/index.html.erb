<h1 class="sub">Nombres de las secciones</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @seccion_nombres.each do |seccion_nombre| %>
      <tr>
        <td><%= seccion_nombre.nombre %></td>
        <td><%= link_to 'Mostrar', seccion_nombre %></td>
        <td><%= link_to 'Editar', edit_seccion_nombre_path(seccion_nombre) %></td>
        <td><%= link_to 'Eliminar', seccion_nombre, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear nuevo nombre de sección', new_seccion_nombre_path %>
