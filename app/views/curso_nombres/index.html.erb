<h1 class="sub">Nombres de cursos</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @curso_nombres.each do |curso_nombre| %>
      <tr>
        <td><%= curso_nombre.nombre %></td>
        <td><%= link_to 'Detalles', curso_nombre %></td>
        <td><%= link_to 'Editar', edit_curso_nombre_path(curso_nombre) %></td>
        <td><%= link_to 'Eliminar', curso_nombre, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar nombre de curso', new_curso_nombre_path %>
