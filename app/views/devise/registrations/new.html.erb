<h2 class="sub">Pre-registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="row">
  <div class="form-group col-sm-3">
    <%= f.label :nombre, 'Nombre(s)' %>
    <%= f.text_field :nombre, autofocus: true, class:'form-control', required: true %>
  </div>
</div>

<div class="row">
  <div class="form-group col-sm-3">
    <%= f.label :paterno, 'Apellido paterno' %>
    <%= f.text_field :paterno, class:'form-control', required: true %>
  </div>
</div>

<div class="row">
  <div class="form-group col-sm-3">
    <%= f.label :materno, 'Apellido materno' %>
    <%= f.text_field :materno, class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="form-group col-sm-3">
    <%= f.label :rfc, 'CURP' %> <strong><%= link_to 'Â¿No conoce su CURP?', 'http://consultas.curp.gob.mx', html_options = {target: '_blank'} %></strong>
    <%= f.text_field :rfc, class:'form-control', style: 'text-transform:uppercase', maxlength: 18, required: true %>
  </div>
</div>

<!--<div class="row">
  <div class="form-group col-sm-3">
    <%#= f.label :centro_id, 'Centro al que se inscribe' %>
    <%#= collection_select(:user, :centro_id, Centro.all, :id, :nombre, {prompt: 'Seleccione'}, class:'form-control') %>
  </div>
</div>-->

<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres como m&iacute;nimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
  </div>
</div>


<div class="row">
  <div class="form-group col-md-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-3">
    <%= f.submit "Registrarse", class:'btn btn-md btn-primary' %>
  </div>
</div>
<% end %>
<%= link_to 'Regresar', root_path %>
<script>
$(document).ready(function(){
    $('#curp').keyup(function(){
        $(this).val($(this).val().toUpperCase());
    });
});
</script>
