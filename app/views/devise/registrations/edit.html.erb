<h1 class="sub">Editar datos</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :nombre, "Nombre" %><br />
    <%= f.text_field :nombre, class:'form-control' %>
  </div>
</div>
<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :paterno, "Apellido paterno" %><br />
    <%= f.text_field :paterno, class:'form-control' %>
  </div>
</div>
<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :materno, "Apellido materno" %><br />
    <%= f.text_field :materno, class:'form-control' %>
  </div>
</div>
<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :rfc, "RFC" %><br />
    <%= f.text_field :rfc, class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, class:'form-control' %>
  </div>
</div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :password, 'Nueva contraseña' %><br />
    <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
    <% if @minimum_password_length %>
      <em>M&iacute;nimo <%= @minimum_password_length %> caracteres</em>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :password_confirmation, "Repita la nueva contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control' %>
  </div>
</div>
<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :current_password %> <i>(para confirmar sus cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class:'form-control' %>
  </div>
</div>
<div class="row">
  <div class="actions col-sm-1">
    <%= f.submit "Enviar", class:'btn btn-primary' %>
  </div>
</div>
<% end %>

<%= link_to "Regresar", :back %>
