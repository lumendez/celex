<table class="table table-bordered">
  <tr>
    <th>Nombre</th>
    <th>Rol</th>
    <th>Correo electrónico</th>
    <% if can? :update, User %>
    <th colspan="3">Opciones</th>
    <% end %>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.nombre_completo %></td>
      <td class="profesor"><%= user.role.nombre %></td>
      <td><%= user.email %></td>
      <% if can? :update, user %>
      <td><%= link_to 'Mostrar', user %></td>
      <td><%= link_to 'Editar', edit_user_path(user) %></td>
      <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
